<div class="banner">
  <div class="map" style="background-image: url('<%= @flat.img_url %>')"></div>
</div>
<div class="container margin-top-negative">
  <div class="row g-4">
    <div class="col-8">
      <div class="card" id="header">
        <div class="card-body">
          <h1><%= @flat.name %></h1>
          <p><%= @flat.address %></p>
        </div>
      </div>
      <div class="card" id="description">
        <div class="card-body">
          <h2>A bit more about this flat...</h2>
          <p><%= @flat.description %></p>
        </div>
      </div>
      <div class="card" id="details">
        <div class="card-body">
          <h2>Details</h2>
          <div class="d-flex">
            <span class="me-2">
              <i class="fa-solid fa-people-line"></i>
              <%= @flat.number_of_guests %>
            </span>
            <span>
              <i class="fa-solid fa-euro-sign"></i>
              <%= @flat.price_per_night %>
            </span>
          </div>
        </div>
      </div>
    </div>
    <div class="col-4">
      <div class="card" id="booking-form">
        <div class="card-body">
          <h3>Book this place!</h3>
          <form action="">
            <div class="input-group mb-3 w-100">
              <span class="input-group-text">
                <label for="check-in">From:</label>
              </span>
              <input type="date" palceholder="12/10/2017" id="check-in" class="form-control">
            </div>
            <div class="input-group mb-3 w-100">
              <span class="input-group-text">
                <label for="check-out">To:</label>
              </span>
              <input type="date" palceholder="19/10/2017" id="check-out" class="form-control">
            </div>
              <input type="submit" value="Book" class="btn btn-success w-100">
          </form>
        </div>
      </div>
      <div class="card" id="social">
        <div class="card-body d-flex justify-content-between">
          <p class="m-0">Share</p>
          <div>
            <i class="fa-brands fa-facebook"></i>
            <i class="fa-brands fa-square-x-twitter"></i>
            <i class="fa-brands fa-pinterest"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
